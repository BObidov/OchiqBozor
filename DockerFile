# 1. Java 21 + Maven 3.9.4 bilan build qilamiz
FROM maven:3.9.4-eclipse-temurin-21 as builder
WORKDIR /app
COPY . /app
RUN mvn clean install

# 2. Faqat .jar faylni production image'ga koâ€˜chiramiz
FROM eclipse-temurin:21-jdk
COPY --from=builder /app/target/UzMart-0.0.1-SNAPSHOT.jar /app/app.jar
ENTRYPOINT ["java", "-jar", "/app/app.jar"]
